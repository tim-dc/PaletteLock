<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobdeve.s12.cheng.delacruz.palettelock">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pl_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pl_launcher_round"
        android:screenOrientation="sensorPortrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.PaletteLock">
        <activity android:name=".SelectLevel"
            android:screenOrientation="landscape"></activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="landscape"></activity>
        <activity android:name=".StartScreen" android:screenOrientation="landscape"/>
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>