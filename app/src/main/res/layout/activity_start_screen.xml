<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf8ef"
    android:orientation="vertical"
    tools:context=".StartScreen">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_design"
        android:layout_width="745dp"
        android:layout_height="353dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="4dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/bottom1"
        app:lottie_repeatCount="5" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_design_top"
        android:layout_width="745dp"
        android:layout_height="353dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="16dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/top1"
        app:lottie_repeatCount="5" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_play"
        android:layout_width="145dp"
        android:layout_height="92dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintBottom_toBottomOf="@+id/title_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/play2" />

    <ImageView
        android:id="@+id/title_one"
        android:layout_width="468dp"
        android:layout_height="416dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/title_eight" />


</androidx.constraintlayout.widget.ConstraintLayout>